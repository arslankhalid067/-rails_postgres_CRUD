<%= link_to 'All Articles', articles_path,class: "btn btn-info m-3"%>
<% if !@article.nil? %>
<div class="container">
    <h2 class="text-center">Article</h2>
    <hr />
    <% if @article.image.attached?%>
        <div class="col-lg-12">
            <img src="<%= url_for(@article.image)%>" class="w-100">
        </div>
    <%end%>
    <h3 class="text-center mt-3"> <%= @article.title %> </h3>
    <hr /> 
    <small>Posted <strong><%= time_ago_in_words(@article.created_at)%></strong> Ago, </small>
    <small>Last Edited <strong><%= time_ago_in_words(@article.updated_at)%></strong> Ago</small>   
    <hr>
    <p> <%= @article.body %> </p>
    <h2>Comments</h2>
    <%= render 'partials/comments',locals: @article.comments%>
<h3>Add Comment</h3>
<%= render 'partials/comments_form'%>
</div>
<% else %>

<div class="container">
    <h3>No Article Found</h3>

<% end %>

</div>









